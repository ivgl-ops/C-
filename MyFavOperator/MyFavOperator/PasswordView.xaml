        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyFavOperator"
        mc:Ignorable="d"
        Title="PasswordView" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="102" Margin="120,140,0,0" TextWrapping="Wrap" FontSize="70" Text="{Binding One}" VerticalAlignment="Top" Width="109"/>
        <TextBox HorizontalAlignment="Left" Height="102" Margin="270,140,0,0" TextWrapping="Wrap" FontSize="70" Text="{Binding Two}" VerticalAlignment="Top" Width="109"/>
        <TextBox HorizontalAlignment="Left" Height="102" Margin="430,140,0,0" TextWrapping="Wrap" FontSize="70" Text="{Binding Three}" VerticalAlignment="Top" Width="109"/>
        <TextBox HorizontalAlignment="Left" Height="102" Margin="580,140,0,0" TextWrapping="Wrap" FontSize="70" Text="{Binding Four}" VerticalAlignment="Top" Width="109"/>
        <TextBlock HorizontalAlignment="Left" Margin="120,48,0,0" FontSize="26" TextWrapping="Wrap" Text="Введите код который пришел вам на телефон" VerticalAlignment="Top" Height="54" Width="569"/>

    </Grid>
</Window>
